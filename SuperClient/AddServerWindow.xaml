<Window x:Class="SuperClient.AddServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:superClient="clr-namespace:SuperClient"
        mc:Ignorable="d"
        Title="AddServerWindow" Height="450" Width="400" d:DataContext="{d:DesignInstance superClient:AddServerWindow}">
    <StackPanel Margin="5" Orientation="Horizontal">
        <StackPanel Margin="25,15,5,5">
            <TextBlock Margin="5" Text="Server title"      HorizontalAlignment="Right"/>
            <TextBlock Margin="5" Text="Server IP address" HorizontalAlignment="Right"/>
            <TextBlock Margin="5" Text="Server TCP port" HorizontalAlignment="Right"/>
            <TextBlock Margin="5" Text="User name" HorizontalAlignment="Right"/>
            <TextBlock Margin="5" Text="User password" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Margin="5,15,5,5">
            <TextBox Margin="5" Name="ServerTitle" Width="150" Text="{Binding ServerTitleText}"/>
        </StackPanel>
    </StackPanel>
</Window>

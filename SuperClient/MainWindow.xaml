<Window x:Class="SuperClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowState="Maximized" Loaded="Window_Loaded" Closing="MainWindow_OnClosing">
    <DockPanel>
        <GroupBox DockPanel.Dock="Left" Header="Servers" Width="200">
            <DockPanel Margin="5">
                <Button DockPanel.Dock="Bottom" Width="150" Height="25" Content="Add server" Margin="5" Click="AddServer"/>
                <Button Width="150" Height="25" Content="Connect server" Margin="5" Click="AddChild"/>
            </DockPanel>
        </GroupBox>
        <DockPanel DockPanel.Dock="Left" Background="Beige">

        </DockPanel>
        <TabControl Name="TabControl" Visibility="Visible">
          
        </TabControl>

    </DockPanel>
</Window>































































